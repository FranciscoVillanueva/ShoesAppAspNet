@model List<BusinessLayer.ProductEntity>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Observations
        </th>
        <th>
            Price Distributor
        </th>
        <th>
            Price Client
        </th>
        <th>
            Price Member
        </th>
        <th>
            Is Enabled
        </th>
        <th>
            Keywords
        </th>
        <th>
            Date Update
        </th>
