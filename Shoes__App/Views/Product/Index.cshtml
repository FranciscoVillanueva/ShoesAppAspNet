                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keywords)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateUpdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatBrandCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatCatalogsSeason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameColor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatProvidersName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatTypeCode)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <br/>
                @Html.ActionLink("Details", "Details", new { id = item.Id }) <br/> 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <br/>
            </td>
        </tr>
    }

</table>