<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .buttonGradient {
            background: linear-gradient(to right, #08cca5 50%, #18bc9c 50%); /*#0cf0c3 #2fdebc*/
            background-size: 200% 100%;
            background-position: right bottom;
            transition: all .5s ease-out;
        }

        .buttonGradient:hover {
            background-position: left bottom;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header buttonGradient">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    @Html.ActionLink("Shoes App", "Index", "Product", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="buttonGradient">
                        @Html.ActionLink("Shoes", "Index", "Product")
                    <li>
                    <li class="buttonGradient">
                        @Html.ActionLink("About", "About", "Home")
                    <li>
                    <li class="buttonGradient">
                        @Html.ActionLink("Contact", "Contact", "Home")
                    <li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
